<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.Login.LoginActivity">
    <ImageView
        android:src="@drawable/meet_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pablogarcia.meetup.CustomViews.CircularImageView
                android:id="@+id/imageUserLogin"
                android:src="@drawable/userlogin"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/userNameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageUserLogin"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:hint="@string/userLogin"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/userPassInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameInputLayout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/userPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/userPass"
                    android:textSize="7pt"/>
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userPassInputLayout"
                android:text="@string/loginButton"
                android:textColor="@color/colorTextIcons"
                android:background="@color/colorAccent"
                android:layout_margin="8dp"
                android:onClick="onClickButtonLogin"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignStart="@+id/cardView"
        android:layout_below="@+id/cardView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notRegistered"
            android:textColor="@color/colorTextIcons"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonRegister"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent" />
    </LinearLayout>



</RelativeLayout>